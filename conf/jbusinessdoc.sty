% ヘッダ定義
\makeatletter
\def\@documentnumber{}
\def\documentnumber#1{\gdef\@documentnumber{{#1}}}
\def\@destination{}
\def\destination#1{\gdef\@destination{{#1}}}
\renewcommand{\@maketitle}{
    \newpage
    % 文書番号（もしあれば）＋日付
    \begin{flushright}
    \if{\begingroup \@documentnumber \endgroup}{}
    \else
    \@documentnumber \par
    \fi
    \@date
    \end{flushright}
    \vspace{1.0zh}
    % 宛先
    \@destination
    \vspace{1.0zh}
    % 作成者
    \begin{flushright}
    \@author
    \end{flushright}
    \bigskip
    % タイトル
    \begin{center}
        {\Large \@title}
    \end{center}
    \bigskip
}
\makeatother
% ヘッダ定義終了

% 前略 草々 を出力するzenryaku環境
\newenvironment{zenryaku}{
    \noindent 前略 \par
}{
    \begin{flushright}
        草々
    \end{flushright}
    \par
}

% 拝啓 敬具 を出力するhaikei環境
\newenvironment{haikei}{
    \noindent 拝啓 \par
}{
